{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "SpaceLink: Start Development Server",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "SpaceLink: Start Backend Only",
			"type": "shell",
			"command": "cd server; npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "SpaceLink: Start Frontend Only",
			"type": "shell",
			"command": "cd client; npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "SpaceLink: Install All Dependencies",
			"type": "shell",
			"command": "npm run install-all",
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "SpaceLink: Build for Production",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
